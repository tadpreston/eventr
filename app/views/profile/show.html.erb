<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-md-6 border rounded form-box">
      <div class="row p-2">
        <div class="col-6">Email:</div>
        <div class="col-6"><%= @user.email %></div>
      </div>

      <div class="row p-2">
        <div class="col-6">First Name:</div>
        <div class="col-6"><%= @user.first_name %></div>
      </div>

      <div class="row p-2">
        <div class="col-6">Last Name:</div>
        <div class="col-6"><%= @user.last_name %></div>
      </div>

      <div class="row p-2">
        <div class="col">
          <%= link_to "Edit Profile", profile_edit_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
